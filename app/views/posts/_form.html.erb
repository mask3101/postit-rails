<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
<%= f.label :title, "Input Title" %>
<%= f.text_field :title %>
<%= f.label :url, "Input URL!" %>
<%= f.text_field :url %>
<%= f.label :description, "Input Description!" %>
<%= f.text_field :description %>
<br/>
<%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary')%>
<% end %>