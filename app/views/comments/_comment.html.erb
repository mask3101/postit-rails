<% show_post ||= false %>
<div class="row">
  <div class="span0 well text-center">
    <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
    <span id='post_<%= comment.post.slug %>_comment_<%= comment.id %>_votes'><%= comment.total_votes %> <%= comment.total_votes == 1 ? "vote" : "votes" %></span>
    <br/>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  </div>

  <div class='well span8'>
    <em><%= comment.body %></em>
    <% if show_post %>
      on <%= link_to "#{comment.post.title}", post_path(comment.post) %>
    <% end -%>
    <br/>
    <span class='quiet'>Posted by: </span><%= link_to comment.user.username, user_path(comment.user) %>
      <small>Post created at: <%= display_time(comment.created_at) %></small>
  </div>
</div>
