<% if obj.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8'>
      <p>There were some errrors:</p>
      <% obj.errors.full_messages.each do |msg| %>
        <ul>
          <li>
            <%= msg %> 
          </li>
        </ul>
      <% end %>
    </div>
  </div>
<% end %>